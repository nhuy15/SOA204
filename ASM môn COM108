void tiendien()
{
	  	float sokw,sotien;
        printf ("nhap vao so kw tieu thu:"); scanf ("%f",&sokw);
        if (sokw<=50) sotien=sokw*1678;
        else if (sokw>=100) sotien=50*1678+(sokw-50)*1734;
        else if (sokw>=200) sotien=50+1678+50*1734+(sokw-100)*2014;
        else if (sokw>=300) sotien=50+1678+50*1734+100+(sokw-200)*2536;
        else if (sokw>=400) sotien=50+1678+50*1734+100+(sokw-300)*2834;
        else 
        sotien= 50*1678+50*1734+100*2014+100*2536+100*2834+(sokw-400)*2927;
        printf ("So tien dien phai tra:%f",sotien); 	
}
