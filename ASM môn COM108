void songuyen()
{
float x;
int count=0;
  printf("\nMoi ban nhap mot so bat ky: ");
  scanf("%f",&x);
  if(x==(int)x){
    printf("\nx la so nguyen",x);
  }else{
    printf("\nx khong phai la so nguyen",x);
  }	
     int i,y; 
	  y=x; 
    if(x<2){
	printf("\nx khong phai so nguyen to",&x);}
	else {
	  for(i=2 ;i<y; i++){		 
         if(y% i ==0){	  
        count++;}
		}	
		if(count ==0){   	
 	     printf("\nx la so nguyen to ",&x);
 	 
                     }else {   	
                         printf("\nx khong phai la so nguyen to ",&x); 
                    }
                    }
    if(x>0){
      i=sqrt(x);
    if((i*i)==x)
         printf("\nx la so chinh phuong\n");
     else
         printf("\nx khong phai la so chinh phuong\n");
                    }
}



//---------------------------------------------------
void uscbsc()
{
int a,b,uscln,bscnn;
	//input
	printf("nhap vao so a: ");
	scanf("%d",&a);
	printf("nhap vao so b: ");
	scanf("%d",&b);
	//xu ly tinh toan
	int so1 = a;
	int so2 = b;
	if(a==0 || b==0)
	{
		uscln = a+b;
		printf("uoc so chung lon nhat cua %d va %d la %d \n",so1,so2,uscln);
	}
	else
	{
		while(a!=b)
		{
			if(a>b)
			{
				a = a-b;
			}
			else
			{
				b = b-a;
			}
		}
		uscln = a;
		printf("uscln cua %d va %d la %d \n",so1,so2,uscln);
	}
	bscnn =(so1*so2)/uscln;
	printf("bscnn cua %d va %d la %d \n",so1,so2,bscnn);
	

}



