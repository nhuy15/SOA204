//---------------------------------------------------
void phanso()
{
int tuso1,mauso1,tuso2,mauso2;
	int i;
	printf("Nhap tu so thu 1: "); scanf("%d",&tuso1);
	printf("Nhap mau so thu 1: "); scanf("%d",&mauso1);
	printf("\nPhan so thu 1: %d/%d",tuso1,mauso1);
	printf("\n-----------------------------\n");
	printf("Nhap tu so thu 2: "); scanf("%d",&tuso2);
	printf("Nhap mau so thu 2: "); scanf("%d",&mauso2);
	printf("\nPhan so thu 2: %d/%d",tuso2,mauso2);
	printf("\n======================================\n");
	//--Tinh tong hai phan so---------------
	int tucuatong= (tuso1 * mauso2) + (tuso2 * mauso1);
	int maucuatong=(mauso1 * mauso2);
	for(i=maucuatong;i>=1;i--){
		
		if(tucuatong%i==0 && maucuatong%i==0){
			
			if(maucuatong/i==1){
				printf("Tong hai phan so: %d/%d + %d/%d = %d\n",tuso1,mauso1,tuso2,mauso2,tucuatong/i);
			}
			else{
				printf("Tong hai phan so: %d/%d + %d/%d = %d/%d\n",tuso1,mauso1,tuso2,mauso2,tucuatong/i,maucuatong/i);
			}
			break;
		}
	}
	//--Tinh hieu hai phan so----------------
	int tucuahieu=(tuso1*mauso2)-(tuso2*mauso1);
	int maucuahieu=(mauso1*mauso2);
	for(i=maucuahieu;i>=1;i--){
		if(tucuahieu%i==0 && maucuahieu%i==0){
			if(maucuahieu/i==1){
				printf("Hieu hai phan so: %d/%d - %d/%d = %d\n",tuso1,mauso1,tuso2,mauso2,tucuahieu/i);
			}
			else{
			printf("Hieu hai phan so: %d/%d - %d/%d = %d/%d\n",tuso1,mauso1,tuso2,mauso2,tucuahieu/i,maucuahieu/i);
			}
			break;
		}
	}
	//--Tinh tich hai phan so-----------------
	int tucuatich=tuso1*tuso2;
	int maucuatich=mauso1*mauso2;
	
	for(i=maucuatich;i>0;i--){
		
		if(tucuatich%i==0 && maucuatich%i==0){
			if(maucuatich/i==1){
				printf("Tich hai phan so: %d/%d x %d/%d = %d\n",tuso1,mauso1,tuso2,mauso2,tucuatich/i);
			}
			else{
			printf("Tich hai phan so: %d/%d x %d/%d = %d/%d\n",tuso1,mauso1,tuso2,mauso2,tucuatich/i,maucuatich/i);
			}
			break;
		}
	}
	//--Tinh thuong hai phan so---------------------
	int tucuathuong = tuso1 * mauso2;
	int maucuathuong = mauso1 * tuso2;
	for(i=maucuathuong;i>0;i--){
		
		if(tucuathuong%i==0 && maucuathuong%i==0){
			
			if(maucuathuong/i==1){
				printf("Thuong hai phan so: %d/%d %c %d/%d = %d\n",tuso1,mauso1,247,tuso2,mauso2,tucuathuong/i);
			}
			else{
			printf("Thuong hai phan so: %d/%d %c %d/%d = %d/%d\n",tuso1,mauso1,247,tuso2,mauso2,tucuathuong/i,maucuathuong/i);
			}
			break;
		}
	}
	for(i=maucuathuong;i<0;i++){
		if(tucuathuong%i==0 && maucuathuong%i==0){
			if(maucuathuong/i==1){
				printf("Thuong hai phan so: %d/%d %c %d/%d = %d\n",tuso1,mauso1,247,tuso2,mauso2,tucuathuong/i);
			}
			else{
			printf("Thuong hai phan so: %d/%d %c %d/%d = %d/%d\n",tuso1,mauso1,247,tuso2,mauso2,tucuathuong/i,maucuathuong/i);
			}
			break;
		}
	}			 
}
