//---------------------------------------------------
void laisuat()
{
int tienvay;
	printf("Nhap so tien can vay: "); scanf("%d",&tienvay);
	int thang;
	printf("\nSo tien can tra trong 12 thang: \n");
	printf("+--------------------------------------------------------------------------+\n");
	printf("| Ky han | Lai phai tra | Goc phai tra | So tien can tra | So tien con lai |\n");
	int laiphaitra;
	int gocphaitra;
	int sotiencantra;
	int sotienconlai=tienvay;
	for(thang=1;thang<=12;thang++)
	{
		laiphaitra = (sotienconlai)*85;
		gocphaitra = tienvay/12;
		sotiencantra = laiphaitra + gocphaitra;
		sotienconlai = sotienconlai - gocphaitra;
		printf("|--------------------------------------------------------------------------|\n");
		printf("| %6d | %12d | %12d | %15d | %15d |\n",thang,laiphaitra,gocphaitra,sotiencantra,sotienconlai);
	}
	printf("+--------------------------------------------------------------------------+");
}
