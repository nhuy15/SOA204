void karaoke()
{
 float thoigianbatdau,thoigianketthuc,tongtien,sogio;
 Nhaplai:
      printf ("nhap thoi gian bat dau:",thoigianbatdau);
     scanf ("%f" ,&thoigianbatdau);
      printf ("nhap thoi gian ket thuc:",thoigianketthuc); scanf ("%f", &thoigianketthuc);
      if   ( thoigianbatdau < 12 || thoigianketthuc > 23 ){
 	  printf ("quan chi hoat dong tu 12h den 23h\n");
 	  printf("Xin vui long quay lai sau!!! \n");
 	goto Nhaplai;
     }	
     
          sogio = thoigianketthuc - thoigianbatdau;
          if (sogio <= 3) {
 	       tongtien = sogio*150000;
          }else {
          tongtien= 3*150000+ (sogio-3)*150000*0.7;
          }
          if (thoigianbatdau >=14 && 17>= thoigianbatdau){
          	tongtien = tongtien*0.9;
		  }
    
		printf ("so tien can thanh toan la: %.0f" ,tongtien);	
}



